<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <!-- Define Persistence Unit -->
    <persistence-unit name="datos" transaction-type="JTA">
        <jta-data-source>java:global/jdbc/gestRopa</jta-data-source>
        <properties>
            <property name="jakarta.persistence.schema-generation.database.action"
                      value="drop-and-create"/>
            <!-- Enable JPA SQL sentences logging -->
            <property name="eclipselink.logging.level" value="INFO"/>
            <property name="eclipselink.logging.parameters" value="true"/>
            <property name="eclipselink.logging.level.sql" value="FINE"/>
            <property name="jakarta.persistence.sql-load-script-source" value="/META-INF/sql/datos.sql"/>
        </properties>
    </persistence-unit>
</persistence>
